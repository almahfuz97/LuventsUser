<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BottomNavigation">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_nav_linear_id"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bot_right2"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:elevation="1dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_item_home"
            app:bt_icon="@drawable/ic_home_black_24dp"
            android:layout_marginEnd="10dp"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/white"
            app:bt_title="Home"
            >

        </com.gauravk.bubblenavigation.BubbleToggleView>

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_createEvent"
            app:bt_icon="@drawable/ic_bookmark_white_24dp"
            android:layout_marginEnd="5dp"
            app:bt_colorActive="@color/green_active"
            app:bt_colorInactive="@color/white"
            app:bt_title="Bookmark"
            >

        </com.gauravk.bubblenavigation.BubbleToggleView>



        <com.gauravk.bubblenavigation.BubbleToggleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nav_Notification"
            app:bt_icon="@drawable/ic_person_white_24dp"
            app:bt_colorActive="@color/red_active"
            app:bt_colorInactive="@color/white"
            app:bt_title="Profile"
            >

        </com.gauravk.bubblenavigation.BubbleToggleView>



    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>



</RelativeLayout>