<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="8dp"
    android:layout_marginBottom="10sp"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comment_list_circle_profileId"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_color="@color/black"
                app:civ_border_width=".5dp"
                android:src="@drawable/proico"
                android:padding="5sp"
                android:layout_marginRight="5dp"
                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/circle_gray_bg"
                android:padding="15sp"
                >



                <TextView
                    android:id="@+id/comment_list_UserNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abdullah Al Mahfuz"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    >

                </TextView>

                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/comment_list_comment_Tv_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:text="Hello Hello Hi Hi"
                    android:textColor="#3D3B3B"
                    android:focusableInTouchMode="false"
                    android:layout_marginTop="1dp"
                    android:focusable="false"
                    android:textSize="12sp"
                    android:clickable="false"

                    android:textIsSelectable="true"
                    >
                </com.borjabravo.readmoretextview.ReadMoreTextView>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/comment_list_timeAgoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textSize="9sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="5min ago"
            android:layout_marginStart="90dp"
            >

        </TextView>

    </LinearLayout>


</androidx.cardview.widget.CardView>