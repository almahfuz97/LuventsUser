<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SingleScheduleActivity">

    <!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                app:titleTextColor="@color/white"

                android:id="@+id/singleScheduleToolbarId"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginEnd="5dp"

                    >

                    <TextView
                        android:id="@+id/single_schedule_toolbarTitleTvID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Head"
                        android:textColor="@color/white"
                        android:padding="10sp"
                        android:textSize="@dimen/_15sdp"
                        >

                    </TextView>


                </LinearLayout>



                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="10sp"
                    android:layout_margin="15dp"


                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layout_scheduleName"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"

                            >

                            <TextView
                                android:id="@+id/singleScheduleTitleName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hackathon"
                                android:textColor="@color/white"
                                >

                            </TextView>
                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Time"
                            android:textStyle="bold"
                            android:textColor="@color/blue_active"
                            android:textSize="16sp"
                            >

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="fklsjf"
                            android:textColor="@color/red_active"
                            android:padding="5dp"
                            android:id="@+id/singleScheduleTimeTvId"
                            >

                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bus Time:"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:textColor="@color/blue_active"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/singleScheduleBusTimeId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 am:"
                            android:padding="5dp"
                            android:textColor="@color/red_active"
                            >

                        </TextView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Details"
                            android:textStyle="bold"
                            android:textColor="@color/blue_active"
                            android:textSize="16sp"
                            >

                        </TextView>


                        <com.borjabravo.readmoretextview.ReadMoreTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/singleScheduleDescId"
                            android:padding="5dp"
                            android:textSize="16sp"
                            app:colorClickableText="#f22"
                            app:trimLines="10"
                            android:textIsSelectable="true"
                            android:layout_marginBottom="12dp"

                            >
                        </com.borjabravo.readmoretextview.ReadMoreTextView>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginEnd="5dp"

                >

                <TextView
                    android:id="@+id/single_schedule_registerNowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Now"
                    android:background="@drawable/bg_circle_shape"
                    android:layout_margin="12dp"
                    android:textColor="@color/red_active"
                    android:padding="12sp"

                    >

                </TextView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Registered User"
                android:padding="15dp"
                android:gravity="center"
                android:background="@drawable/bg_circle_shape_blue"
                android:textColor="@color/white"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                >

            </TextView>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >


                <EditText
                    android:id="@+id/singleScheduleSearchEtId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_circle_shape"
                    android:drawableStart="@drawable/ic_search_blue_gray_24dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:hint="search user"
                    >

                </EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_filter"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort By "
                        android:textSize="15sp"
                        android:padding="12dp"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/bg_circle_shape"
                        android:textColor="@color/black"

                        >

                    </TextView>

                    <Spinner
                        android:id="@+id/singleScheduleSpinnerId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="14dp"
                        android:entries="@array/statusSorted"
                        >
                    </Spinner>

                </RelativeLayout>

                <TextView
                    android:id="@+id/singleScheduleNoneRegisteredTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="No one registered yet!"
                    android:visibility="gone"
                    >

                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:id="@+id/singleScheduleRecylcerView"
                    android:focusable="true"
                    android:layout_marginBottom="30dp"

                    >
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
