<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/login_design"
    tools:context=".activities.ForgotPasswordActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pass"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                >

            </TextView>

            <EditText
                android:id="@+id/forgotPassEditTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_shape"
                android:hint="enter your email"
                android:padding="12dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                >
            </EditText>
            <Button
                android:id="@+id/forgotPassResetBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_shape"
                android:layout_marginBottom="10dp"
                android:text="Reset"
                android:textColor="@color/colorPrimaryDark"
                >

            </Button>

            <TextView
                android:id="@+id/forgotPassGoBackTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Back"
                android:drawableStart="@drawable/ic_arrow_back_darkblue_24dp"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="5dp"
                >

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>