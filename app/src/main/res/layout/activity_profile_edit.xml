<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileEditActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@drawable/login_design2"

            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:id="@+id/editProfileCircleImgId"
                >

            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/editProfileChooseImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_a_photo"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="5dp"

                >

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/editProfileSaveId"
                android:text="Save"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                >

            </TextView>




        </LinearLayout>

        <TextView
            android:id="@+id/editProfileBackId"
            android:text="Back"
            android:drawableStart="@drawable/ic_arrow_back_darkblue_24dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            >

        </TextView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                >




                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/editProfileNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_account_circle_black_24dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:padding="10dp"


                    />

                <TextView
                    android:id="@+id/editProfileEmailEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_email_blue_24dp"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/editProfileUniversityNameEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="University name"
                    android:drawableStart="@drawable/ic_school_blue_24dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:padding="10dp"


                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/editProfileContactEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:inputType="phone"
                    android:hint="+880"
                    android:padding="10dp"


                    />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</LinearLayout>