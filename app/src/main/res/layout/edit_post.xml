<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp"
    >

    <Button
        android:id="@+id/edit_post_saveBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/green_inactive"
        android:background="@drawable/bg_circle_shape"
        android:layout_marginBottom="10dp"
        >

    </Button>
    <EditText
        android:id="@+id/edit_post_editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:cursorVisible="true"
        android:inputType="textMultiLine"

        >
    </EditText>

    <ImageView
        android:id="@+id/edit_post_imageviewID"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_image_darkblue_24dp"
        >
    </ImageView>

    <Button
        android:id="@+id/edit_post_choosePhotoBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Choose Photo"
        android:textAllCaps="false"
        android:background="@drawable/bg_circle_shape"
        android:padding="10dp"
        android:textColor="@color/green_inactive"
        android:layout_margin="10dp"
        >

    </Button>





</LinearLayout>